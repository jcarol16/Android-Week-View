<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity"
    android:background="#fff">

    <com.alamkanak.weekview.WeekView
        android:id="@+id/weekView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnGap="8dp"
        app:dayBackgroundColor="#05000000"
        app:eventTextColor="#ffffff"
        app:headerColumnBackground="#b9b2ad"
        app:headerColumnPadding="8dp"
        app:headerColumnTextColor="#ffffff"
        app:headerGravity="start"
        app:headerRowBackgroundColor="#f5eda4"
        app:headerRowPadding="12dp"
        app:hourHeight="80dp"
        app:noOfVisibleDays="1"
        app:textSize="12sp"
        app:timeColumnTextColor="#ffffff"
        app:todayBackgroundColor="#08969696"
        app:todayHeaderTextColor="#03adf5" />

</RelativeLayout>
